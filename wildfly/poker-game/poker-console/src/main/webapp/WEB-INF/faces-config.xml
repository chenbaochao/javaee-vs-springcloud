<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>operator</managed-bean-name>
        <managed-bean-class>jeevsspring.wildfly.games.poker.console.bean.Operator</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>connectedOperators</managed-bean-name>
        <managed-bean-class>jeevsspring.wildfly.games.poker.console.bean.ConnectedOperators</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>dashboardCtrl</managed-bean-name>
        <managed-bean-class>jeevsspring.wildfly.games.poker.console.controller.DashboardCtrl</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>operators</property-name>
            <property-class>jeevsspring.wildfly.games.poker.console.bean.ConnectedOperators</property-class>
            <value>#{connectedOperators}</value>
        </managed-property>
    </managed-bean>

</faces-config>